<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/contribute_background"
      android:orientation="vertical"
      android:gravity="center"
      >
    <ImageView
        android:id="@+id/contribute_qr"
        android:layout_width="264dp"
        android:layout_height="264dp"
        android:contentDescription="@string/contribute_qr_content_description"
        android:padding="32dp"
        android:src="@drawable/contribute_qr"
        />
    <Button
        android:id="@+id/contribute_bat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:backgroundTint="@color/contribute_bat_button_tint"
        android:text="@string/contribute_bat"
        android:textAllCaps="false"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:autoLink="web"
        android:text="@string/contribute_code"
        android:textSize="16sp"
        />
  </LinearLayout>
</ScrollView>
